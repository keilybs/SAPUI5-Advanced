<mvc:View controllerName="logali.List.controller.ListTypes"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <IconTabBar>
                            <items>
                                <IconTabFilter text="{i18n>objectList}">
                                    <List items="{ path: '/Products',
                                                   filters: [ {
                                                       path: 'Brand',
                                                       operator: 'EQ',
                                                       value1: 'Compaq' }]
                                                }">
                                        <items>
                                            <ObjectListItem title="{Material} {Brand} {Model}" number="{Price}" numberUnit="{Currency}" type="Detail">
                                                <ObjectAttribute text="{Brand}"/>
                                                <ObjectAttribute text="{Weight}"/>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>standardList}">
                                    <Select selectedKey="{/typeSelection}">
                                        <items>
                                            <core:Item key="None" text="{i18n>None}"/>
                                            <core:Item key="MultiSelect" text="{i18n>MultiSelect}"/>
                                            <core:Item key="SingleSelect" text="{i18n>SingleSelect}"/>
                                            <core:Item key="SingleSelectLeft" text="{i18n>SingleSelectLeft}"/>
                                            <core:Item key="SingleSelectMaster" text="{i18n>SingleSelectMaster}"/>
                                        </items>
                                    </Select>
                                    <Button text="{i18n>showSelectRows}" press="onShowSelectedRow" class="sapUiSmallMarginBegin"/>
                                    <Button text="{i18n>deleteSelectRows}" press="onDeleteSelectRows" class="sapUiSmallMarginBegin" />
                                    <List items="{ path: '/Products',
                                                   sorter:  {
                                                       path: 'Brand',
                                                       descending: false,
                                                       group: true },
                                                    groupHeaderFactory: '.getGroupHeader'  
                                                }" mode="{/typeSelection}" id="standardList">
                                        <items>
                                            <StandardListItem title="{Material} {Brand} {Model}" description="{Weight}" info= "{Price} {Currency}" type="Active">
                                            </StandardListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>inputList}" >
                                    <List items="{/Products}" mode="Delete" delete="onDeleteRow">
                                        <items>
                                            <InputListItem label="{Brand}">
                                                <Select items="{Properties}">
                                                    <core:Item key="{Id}" text="{Text}"></core:Item>
                                                </Select>
                                            </InputListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>notificationList}">
                                    <List items="{/News}">
                                        <items>
                                            <NotificationListItem title="{Title}" description="{Description}" unread="{Unread}" priority="{Priority}" showCloseButton="{ShowCloseButton}" authorName="{Author}"/>
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>customList}">
                                    <List items="{/News}">
                                        <items>
                                            <CustomListItem >
                                                <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                                    <Text text="{Title}"></Text>
                                                    <Text text="{Author}"></Text>
                                                    <Text text="{Description}"></Text>
                                                </layout:Grid>
                                            </CustomListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                            </items>
                        </IconTabBar>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
