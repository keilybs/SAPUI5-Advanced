<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel>
    <Button id="btnShowCity" text="{i18n>btnShowCity}" 
            press="turnOnOff"
            class="sapUiSmallMarginEnd" visible="{Config>/visibleBtnShowCity}"/>
    <Button id="btnHideCity" text="{i18n>btnHideCity}" press="turnOnOff"
            class="sapUiSmallMarginEnd" visible="{Config>/visibleBtnHideCity}"/>
    <Table id="tableEmployee" items="{Employees>/Employees}">
        <columns>
            <Column visible="{Config>/visibleId}">
                <header>
                    <Label text="{i18n>tableId}"/>
                </header>
            </Column>
            <Column visible="{Config>/visibleName}">
                <header>
                    <Label text="{i18n>tableName}"/>
                </header>
            </Column>
            <Column visible="{Config>/visibleCountry}">
                <header>
                    <Label text="{i18n>tableCountry}"/>
                </header>
            </Column>
            <Column id="columnCity" visible="{Config>/visibleCity}">
                <header>
                    <Label text="{i18n>tableCity}"/>
                </header>
            </Column>
            <Column >
                <header>
                    <Label text="{i18n>showDetails}"/>
                </header>
            </Column>            
        </columns>
        <items >
            <ColumnListItem >
                <cells>
                    <Label text="{Employees>EmployeeID}"/>
                    <Label text="{Employees>LastName}, {Employees>FirstName}"/>
                    <Label text="{Employees>Country}"/>
                    <Label text="{Employees>City}"/>
                    <core:Icon src="sap-icon://show" press="showOrders"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <HBox id="ordersTable"></HBox>
</Panel>
</core:FragmentDefinition>